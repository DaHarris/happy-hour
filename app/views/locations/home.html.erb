<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<div class="row">
  <div class="col-md-2 col-md-offset-1">
    <h6><%= 'Current Time: '"#{@time.hour}" +':'+ "#{@time.min}" %></h6>
  </div>
  <div class="col-md-9">
    <% @days.each do |buttons| %>
      <% if buttons[0] == @time.wday %>
        <button type="button" class="btn btn-primary"><%= buttons[1] %></button>
      <% else %>
        <button type="button" class="btn btn-default"><%= buttons[1] %></button>
      <% end %>
    <% end %>
  </div>
</div>

<hr>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'>
    <script type="text/javascript">
      mapBuilder();
    </script>
    <% if @locations != nil %>
      <% @locations.each do |shit| %>
        <% temp = shit.convert %>
        <script type="text/javascript">
          placeMarker(<%= shit.latitude %>, <%=shit.longitude %>, "<%= shit.name %>",
          "<%=shit.hstart%>", "<%=shit.hend%>", "<%=temp%>");
        </script>
      <% end %>
    <% end %>
  </div>
</div>
