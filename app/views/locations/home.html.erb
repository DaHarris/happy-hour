<hr>
<div style='width: 800px;'>
  <div id="map" style='width:1140px; height:500px;'>
    <script type="text/javascript">
      mapBuilder();
    </script>
    <% if @locations != nil %>
      <% @locations.each do |each_location| %>
        <% converted_ratings = each_location.convert %>
        <script type="text/javascript">
          placeMarker(<%= each_location.latitude %>, <%=each_location.longitude %>, "<%= each_location.name %>",
          "<%=each_location.hstart%>", "<%=each_location.hend%>", "<%=converted_ratings%>");
        </script>
      <% end %>
    <% end %>
  </div>
</div>
